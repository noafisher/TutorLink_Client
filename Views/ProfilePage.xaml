<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorLinkClient.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="#FFF5FA">

    <ContentPage.Resources>
        <Style x:Key="pinkFilterLabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#D81B60" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="Margin" Value="0,5,0,0" />
        </Style>

        <Style x:Key="pinkFilterFrameStyle" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="#FCE4EC" />
            <Setter Property="BorderColor" Value="#EC407A" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="5,3" />
        </Style>

        <Style x:Key="pinkEntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#FFF0F5" />
            <Setter Property="TextColor" Value="#AD1457" />
            <Setter Property="PlaceholderColor" Value="#EC407A" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <Style x:Key="pinkButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#C2185B" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BorderColor" Value="#880E4F" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="Margin" Value="0,10,0,5" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="WidthRequest" Value="200" />
        </Style>

        <Style x:Key="errorLabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#C62828" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="5">
            <!-- Page Title -->
            <Label
                Margin="0,10,0,20"
                FontAttributes="Bold"
                FontFamily="SofadiOne-Regular"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Your Profile"
                TextColor="#C2185B" />

            <!-- Profile Image -->
            <Frame
                Margin="0,0,0,15"
                Padding="0"
                BorderColor="#F48FB1"
                CornerRadius="60"
                HeightRequest="120"
                HorizontalOptions="Center"
                IsClippedToBounds="True"
                WidthRequest="120">
                <Image Aspect="AspectFill" Source="{Binding PhotoURL}" />
            </Frame>

            <Button Text="Change Photo" Command="{Binding UploadPictureCommand}" Style="{StaticResource pinkButtonStyle}" />

            <!-- Personal Information Section -->
            <Frame Style="{StaticResource pinkFilterFrameStyle}" Margin="0,15,0,10">
                <VerticalStackLayout Spacing="5">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Personal Information"
                        TextColor="#C2185B"
                        Margin="0,0,0,10" />

                    <Label Text="First Name" Style="{StaticResource pinkFilterLabelStyle}" />
                    <Entry Text="{Binding FirstName}" Placeholder="Enter First Name" Style="{StaticResource pinkEntryStyle}" />
                    <Label Text="{Binding FirstNameError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowFirstNameError}" />

                    <Label Text="Last Name" Style="{StaticResource pinkFilterLabelStyle}" />
                    <Entry Text="{Binding LastName}" Placeholder="Enter Last Name" Style="{StaticResource pinkEntryStyle}" />
                    <Label Text="{Binding LastNameError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowLastNameError}" />

                    <Label Text="Email" Style="{StaticResource pinkFilterLabelStyle}" />
                    <Entry Text="{Binding Email}" Placeholder="Enter Email" Style="{StaticResource pinkEntryStyle}" />
                    <Label Text="{Binding EmailError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowEmailError}" />

                    <Label Text="Password" Style="{StaticResource pinkFilterLabelStyle}" />
                    <Entry Text="{Binding Password}" Placeholder="Enter Password" IsPassword="True" Style="{StaticResource pinkEntryStyle}" />
                    <Label Text="{Binding PasswordError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowPasswordError}" />

                    <Label Text="Address" Style="{StaticResource pinkFilterLabelStyle}" />
                    <Entry Text="{Binding Address}" Placeholder="Enter Address" Style="{StaticResource pinkEntryStyle}" />
                    <Label Text="{Binding AddressError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowAddressError}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Student Section -->
            <Frame Style="{StaticResource pinkFilterFrameStyle}" IsVisible="{Binding IsStudent}" Margin="0,5,0,10">
                <VerticalStackLayout Spacing="5">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Student Information"
                        TextColor="#C2185B"
                        Margin="0,0,0,10" />

                    <Label Text="Current Class" Style="{StaticResource pinkFilterLabelStyle}" />
                    <Entry Text="{Binding CurrentClass}" Keyboard="Numeric" Placeholder="Enter Current Class (1-12)" Style="{StaticResource pinkEntryStyle}" />
                    <Label Text="{Binding CurrentClassError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowCurrentClassError}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Teacher Section -->
            <Frame Style="{StaticResource pinkFilterFrameStyle}" IsVisible="{Binding IsTeacher}" Margin="0,5,0,10">
                <VerticalStackLayout Spacing="5">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Teacher Information"
                        TextColor="#C2185B"
                        Margin="0,0,0,10" />

                    <Label Text="Maximum Distance" Style="{StaticResource pinkFilterLabelStyle}" />
                    <Entry Text="{Binding MaxDistance}" Keyboard="Numeric" Placeholder="Enter Max Distance" Style="{StaticResource pinkEntryStyle}" />
                    <Label Text="{Binding MaxDistanceError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowMaxDistanceError}" />

                    <HorizontalStackLayout Margin="0,5,0,5">
                        <Label Text="Can Teache at The Student Home?" Style="{StaticResource pinkFilterLabelStyle}" />
                        <Switch IsToggled="{Binding GoToStudent}" ThumbColor="#C2185B" OnColor="#F06292" Margin="10,0,0,0" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Margin="0,5,0,5">
                        <Label Text="Can Teach at Home?" Style="{StaticResource pinkFilterLabelStyle}" />
                        <Switch IsToggled="{Binding TeachAtHome}" ThumbColor="#C2185B" OnColor="#F06292" Margin="10,0,0,0" />
                    </HorizontalStackLayout>
                    <Label Text="{Binding TeachAtError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowTeachAtError}" />

                    <Label Text="Years of Experience" Style="{StaticResource pinkFilterLabelStyle}" />
                    <Entry Text="{Binding Vetek}" Keyboard="Numeric" Placeholder="Enter Years of Experience" Style="{StaticResource pinkEntryStyle}" />
                    <Label Text="{Binding VetekError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowVetekError}" />

                    <Label Text="Price Per Hour" Style="{StaticResource pinkFilterLabelStyle}" />
                    <Entry Text="{Binding PricePerHour}" Keyboard="Numeric" Placeholder="Enter Price Per Hour" Style="{StaticResource pinkEntryStyle}" />
                    <Label Text="{Binding PricePerHourError}" Style="{StaticResource errorLabelStyle}" IsVisible="{Binding ShowPricePerHourError}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Update Button and ErrorMsg -->
            <Button Text="Update Profile" Command="{Binding UpdateUser}" Style="{StaticResource pinkButtonStyle}" Margin="0,15,0,5" />
            <Label Text="{Binding ErrorMsg}" TextColor="#C62828" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,5,0,20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>