<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorLinkClient.Views.Register"
             Title="Register">



    <StackLayout VerticalOptions="FillAndExpand">

        <Image Source="imagepage.jpeg" WidthRequest="100" />


        <Label
        FontFamily="Kalam-Regular"
        FontSize="50"
        HorizontalOptions="Center"
        Text="Sign In"
        TextColor="MidnightBlue" />


                <Label
                FontFamily="Kalam-Regular"
                 Text="create your account!"
                 HorizontalOptions="Center"
                  TextColor="LightSkyBlue" 
                  FontSize="30"
                 /> 
        
        
        <ScrollView
            HorizontalScrollBarVisibility="Always"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Always">

            <Grid HorizontalOptions="Center" VerticalOptions="StartAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label
                    x:Name="name_lbl"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="15"
                    Text="שם פרטי"
                    TextColor="MidnightBlue" 
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                />
                <Entry
                    Grid.Column="0"
                    Grid.Row="0"
                    TextColor="MidnightBlue" 
                    Placeholder="הקלד שם פרטי"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                     />
                <!--Text="{Binding Name, Mode=TwoWay}"-->
                <Label
                    Text="שם משפחה"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="1"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="MidnightBlue" />
                <!--Text="{Binding User_Error}"-->
                <Entry
                    Grid.Row="1"
                    Grid.Column="0"
                    Keyboard="Email"
                    Placeholder="הקלד אימייל"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                     />
                <Label
                    x:Name="email_lbl"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="15"
                    Text="אימייל"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Entry
                    Grid.Row="2"
                    Grid.Column="0"
                    Keyboard="Email"
                    Placeholder="הקלד אימייל"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                     />
                <!--Text="{Binding Email, Mode=TwoWay}"-->
                <Label
                    x:Name="password_lbl"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="15"
                    FlowDirection="RightToLeft"
                    Text="סיסמא"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Entry
                    Grid.Row="3"
                    Grid.Column="0"
                    Keyboard="Chat"
                    Placeholder="הקלד סיסמא"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <!--Text="{Binding Password, Mode=TwoWay}" -->

                <!--  בחירת סוג משתמש  -->
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="15"
                    Text="בחר את סוג המשתמש:"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>

                <RadioButton
                    x:Name="Teacher"
                    Margin="5"
                    Checked="HandleCheck"
                    GroupName="Role Selection"
                    Content="מורה" />
                <RadioButton
                    x:Name="Student"
                    Margin="5"
                    Checked="HandleCheck"
                    GroupName="Role Selection"
                    Content="תלמיד" />

                
            </Grid>



                <!--<StackLayout
                    Grid.Row="7"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    --><!--  RadioButton למוכר  --><!--
                    <RadioButton
                        Content="מוכר"
                        GroupName="UserType"
                        IsChecked="{Binding IsSellerChecked}" />

                    --><!--  RadioButton לקונה  --><!--
                    <RadioButton
                        Content="קונה"
                        GroupName="UserType"
                        IsChecked="{Binding IsBuyerChecked}" />
                </StackLayout>-->


                <!--<Button
                    Grid.Row="10"
                    Grid.ColumnSpan="2"
                    Command="{Binding RegistrationCommand}"
                    IsEnabled="{Binding CanRegister}"
                    Text="המשך" />-->

            

        </ScrollView>




    </StackLayout>
</ContentPage>