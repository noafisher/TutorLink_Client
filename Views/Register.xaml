<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorLinkClient.Views.Register"
             Title="Register">



    <StackLayout VerticalOptions="FillAndExpand">

        <Image Source="imagepage.jpeg" WidthRequest="100" />


        <Label
        FontFamily="Kalam-Regular"
        FontSize="50"
        HorizontalOptions="Center"
        Text="Sign Up"
        TextColor="MidnightBlue" />


                <Label
                FontFamily="Kalam-Regular"
                 Text="create your account!"
                 HorizontalOptions="Center"
                  TextColor="LightSkyBlue" 
                  FontSize="30"
                 /> 
        
        
        <ScrollView
            HorizontalScrollBarVisibility="Always"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Always">

            <Grid HorizontalOptions="Center" VerticalOptions="StartAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label
                    x:Name="name_lbl"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="15"
                    Text="First Name:"
                    TextColor="MidnightBlue" 
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                />
                <Entry
                    Grid.Column="1"
                    Grid.Row="0"
                    TextColor="MidnightBlue" 
                    Placeholder="Enter first name"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                     />
                <!--Text="{Binding Name, Mode=TwoWay}"-->
                <Label
                    Text="Last name:"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="1"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="MidnightBlue" />
                <!--Text="{Binding User_Error}"-->
                <Entry
                    Grid.Row="1"
                    Grid.Column="1"
                    Keyboard="Email"
                    Placeholder="Enter last name"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                     />
                <Label
                    x:Name="email_lbl"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="15"
                    Text="Email:"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Entry
                    Grid.Row="2"
                    Grid.Column="1"
                    Keyboard="Email"
                    Placeholder="Enter email"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                     />
                <!--Text="{Binding Email, Mode=TwoWay}"-->
                <Label
                    x:Name="password_lbl"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="15"
                    FlowDirection="RightToLeft"
                    Text="Password:"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Entry
                    Grid.Row="3"
                    Grid.Column="1"
                    Keyboard="Chat"
                    Placeholder="Enter password"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <!--Text="{Binding Password, Mode=TwoWay}" -->

                <!--  בחירת סוג משתמש  -->
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="15"
                    Text="Choose user type:"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>

                <RadioButton
                    Grid.Row="5"
                    Grid.Column="0"
                    x:Name="Teacher"
                    Margin="5"

                    GroupName="Role Selection"
                    Content="Teacher" />
                
                <RadioButton
                    Grid.Row="5"
                    Grid.Column="1"
                    x:Name="Student"
                    Margin="5"

                    GroupName="Role Selection"
                    Content="Student" />

                <Button
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    BackgroundColor="MidnightBlue"
                    Command="{Binding RegistrationCommand}"
                    IsEnabled="{Binding CanRegister}"
                   Text="Create user" 
                    Margin="5"
                    />
                

                <Button
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="Already have an account? login!"
                    BackgroundColor="MidnightBlue"
                    Margin="5"
                    />

            </Grid>



                


                

            

        </ScrollView>




    </StackLayout>
</ContentPage>